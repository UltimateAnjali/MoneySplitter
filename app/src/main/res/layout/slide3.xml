<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/slider_icon_size"
            android:layout_height="@dimen/slider_icon_size"
            android:id="@+id/slide3Img"
            android:contentDescription="@string/contentDes"
            android:src="@drawable/_003_wallet"
            android:layout_gravity="center" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slide3Title"
            android:text="@string/slider3Title"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="20dp"
            android:textSize="@dimen/slider_title_size"
            android:textColor="@color/sliderTitleColor"
            android:textStyle="bold"/>

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slide3Text"
            android:text="@string/slider3"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="20dp"
            android:textSize="@dimen/slider_text_size"
            android:textColor="@color/sliderTextColor"/>

    </LinearLayout>
</RelativeLayout>