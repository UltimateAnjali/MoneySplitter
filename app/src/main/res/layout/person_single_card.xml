<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/personCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/contentViewPerson"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_name"
                android:text="person_name"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:layout_marginLeft="3dp"
                android:layout_centerVertical="true"
                android:textColor="@color/appNameTextColor"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/owesText"
                android:text="You owe"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/person_owing"
                android:layout_below="@id/owesText"
                android:text="$0.00"
                android:layout_marginRight="3dp"
                android:layout_alignParentRight="true"
                android:textSize="20sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/inactiveDot"
            android:layout_gravity="top"/>

    </android.support.v7.widget.CardView>
</LinearLayout>