<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proj.balance.money.Fragments.SelectGroupForExpenses">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_groups_textS"
        android:textSize="30sp"
        android:text="No groups yet"
        android:textColor="@color/inactiveDot"
        android:layout_gravity="center"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/sliderTitleColor"
            android:text="Select a group to share your expenses with"
            android:id="@+id/titleForSelectGrp"
            android:layout_margin="8dp"
            android:gravity="center"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:id="@+id/selectGrpRecyclerView"
            android:elevation="2dp"
            android:visibility="gone"/>
    </LinearLayout>



</FrameLayout>
