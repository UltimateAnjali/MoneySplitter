        android:icon="@drawable/_002_business"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity android:name="capital.handout.paisa.moneysplitter.LoginActivity" android:theme="@style/LoginPageTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="capital.handout.paisa.moneysplitter.Contributions" android:theme="@style/AppTheme"/>
        <activity android:name="capital.handout.paisa.moneysplitter.CreateGroup" android:theme="@style/AppTheme"/>
    </application>

</manifest>